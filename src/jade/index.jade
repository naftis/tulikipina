doctype html
html
  head
    title Tulikipinä
    link(rel='stylesheet', href='css/style.css')
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='keywords', content='retkeily,rovaniemi,lappi,lapland,adventures,northern lights, ice fishing')
    link(rel='apple-touch-icon', sizes='57x57', href='apple-touch-icon-57x57.png')
    link(rel='apple-touch-icon', sizes='114x114', href='apple-touch-icon-114x114.png')
    link(rel='apple-touch-icon', sizes='72x72', href='apple-touch-icon-72x72.png')
    link(rel='apple-touch-icon', sizes='144x144', href='apple-touch-icon-144x144.png')
    link(rel='apple-touch-icon', sizes='60x60', href='apple-touch-icon-60x60.png')
    link(rel='apple-touch-icon', sizes='120x120', href='apple-touch-icon-120x120.png')
    link(rel='apple-touch-icon', sizes='76x76', href='apple-touch-icon-76x76.png')
    link(rel='apple-touch-icon', sizes='152x152', href='apple-touch-icon-152x152.png')
    link(rel='icon', type='image/png', href='favicon-196x196.png', sizes='196x196')
    link(rel='icon', type='image/png', href='favicon-160x160.png', sizes='160x160')
    link(rel='icon', type='image/png', href='favicon-96x96.png', sizes='96x96')
    link(rel='icon', type='image/png', href='favicon-16x16.png', sizes='16x16')
    link(rel='icon', type='image/png', href='favicon-32x32.png', sizes='32x32')
    meta(name='msapplication-TileColor', content='#ffffff')
    meta(name='msapplication-TileImage', content='mstile-144x144.png')
    meta(name='apple-mobile-web-app-capable', content='yes')

  body
    #fb-root

    #header(data-bind='header: { threshold: 150, max: 500 }')
      .header-toggle(data-bind='click: toggleNavigation')
        i.fa.fa-bars
      img.logo(src='images/header-logo.png')
      .nav(data-bind='css: { "nav-visible": navigationVisible }')
        a(href='#!/', data-bind='css: { selected: currentView() === "main" }') Tulikipinä
        a(href='#!/adventures', data-bind='css: { selected: currentView() === "adventures" }') Arctic Adventures
        a(href='#!/summer', data-bind='css: { selected: currentView() === "summer" }') Summer
        a(href='#!/winter', data-bind='css: { selected: currentView() === "winter" }') Winter
        a(href='#!/renting', data-bind='css: { selected: currentView() === "renting" }') Rental gears

    mixin section(name)
      .section(class!=attributes.class, id=name, data-bind='if: currentView() === "#{name}", css: { "section-visible": currentView() === "#{name}" }')
        .cover
        .section-content
          block

    mixin grid-item(background)
      a.grid-item(href!=attributes.href)
        .grid-item-content(data-bind="style: { 'backgroundImage': 'url(#{background})' }")
          .overlay
            .overlay-text
              block

    include sections/index
    include sections/adventures
    include sections/adventures/paddling-yllas
    include sections/adventures/gold-miners-route
    include sections/summer
    include sections/winter
    include sections/renting

    .section.dynamic-content(data-bind='if: currentView() === "dynamic", css: { "section-visible": currentView() === "dynamic" }')
      div(data-bind='loadContent: dynamicPage')
        // ko with: content
        .cover(data-bind='style: { backgroundImage: "url(" + cover + ")"}')
        .section-content
          .row
            h1(data-bind='text: title')
            p.description(data-bind='text: description')
          hr
          .row.markdown(data-bind='markdown: content')
        // /ko

    #footer
      a(href='#!/') Tulikipinä
      a(href='#!/contacts') Contact us
      a(href='https://www.facebook.com/tulikipina', target='_blank') Facebook
      a(href='http://www.tripadvisor.com/Attraction_Review-g189922-d3853721-Reviews-Tulikipina_Artic_Adventures-Rovaniemi_Lapland.html', target='_blank') TripAdvisor

    script(src='http://maps.google.com/maps/api/js?sensor=true')
    | <!--[if lte IE 9]> <script src="js/ie.js" ></script> <![endif]-->
    script(src='js/bundle.js')
