+view("main")(class='view-visible')
  .page.page-visible(data-bind='with: data')
    .cover
      video(loop='', preload='none', data-bind='video: {}', poster='images/covers/video.jpg')
        source(src='videos/Ivalojoki_Skiexpo_2.mp4', type='video/mp4')
        source(src='videos/Ivalojoki_Skiexpo_2.ogg', type='video/ogg')
      .cover-overlay
        .cover-overlay-content
          img(src='images/logo.png')

    .view-content
      .row
        .column.column2-3(data-bind='markdown: about')
        .column.facebook(data-bind='with: feed')
          h3
            a(href='https://www.facebook.com/tulikipina', target='_blank')
              i.fa.fa-facebook
            span(data-bind='text: title')

          .facebook-feed(data-bind='facebook: {}')
            .facebook-feed__wrapper
              // ko foreach: feed
              .facebook-message
                .message-body
                  a(data-bind='attr: { href: $data.link }', target='_blank')
                    h4(data-bind='text: $data.message')
                  .message-body__timestamp
                    span(data-bind='timeago: $data.created_time')
                  p
                    img(data-bind='if: $data.picture, attr: { src: $data.picture }')
                    span(data-bind='text: $data.description')
              // /ko
    .cover.cover-instagram
      tk-instagram

    .view-content#contacts
      .row
        .column
          div(data-bind='with: contacts')
            h3
              span(data-bind='text: title')

            ol.contacts
              li
                i.fa.fa-user
                span(data-bind='text: name')
              li
                i.fa.fa-envelope
                span(data-bind='text: email')

              li
                i.fa.fa-phone
                span(data-bind='text: phone')

            ol.contacts
              li
                i.fa.fa-map-marker
                span(data-bind='text: address')

              li(data-bind='text: company')

      #map(data-bind='map: {}')
