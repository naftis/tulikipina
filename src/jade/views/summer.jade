+view("summer")
  .page.page-visible(data-bind='css: { "page-visible": page() === "main" }')
    .cover
    // ko with: data
    .view-header
      .row
        h1(data-bind='text: title')
        h2.subtitle(data-bind='text: subtitle')

    .view-content
      .row
        .markdown(data-bind='markdown: content')

        .grid(data-bind='foreach: $parent.rows')
          .grid-row(data-bind='foreach: $data')
            a.grid-item(data-bind='attr: { href: "#!/summer/" + id }')
              .grid-item-content(data-bind='style: { backgroundImage: "url(" + activity.thumbnail + ")"}')
                .overlay
                  .overlay-text(data-bind='text: activity.title')

    // /ko
  .page.page-visible(data-bind='with: data, css: { "page-visible": page() === "activity" }')
    div(data-bind='with: activities[$parent.activity()]')
      .cover(data-bind='style: { backgroundImage: "url(" + cover + ")"}')

      .view-header
        .row
          h1(data-bind='text: title')
          h2.subtitle(data-bind='text: subtitle')
          .view-nav
            a.btn(href='#!/summer', data-bind='text: $parent.button.backToMain')

      .view-content
        .row.markdown(data-bind='markdown: content')
