.footer
  height footerHeight
  line-height footerHeight
  position relative
  margin-top -(footerHeight)
  text-align right
  font-size 0.9em
  background #E6E3DF
  color #6C6C6C
  .footer__copyright
    float left
  .footer__links
    float right

  .relative-links
    a
      margin-left 0.5em
      &:after
        content ' | '
      &:last-child
        &:after
          content ''

  .social-links
    a
      margin-left 1em
  .relative-links, .social-links
    display inline-block

    a
      color #6C6C6C
      display inline-block

  i
    font-size 1.2em
    vertical-align middle

  .tripadvisor-icon
    width 22px
    height 13px
    display inline-block
    background-image url('data:image/png;base64,')
    background-size 100%
    vertical-align middle
