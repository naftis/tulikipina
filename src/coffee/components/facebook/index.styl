.facebook-feed
  margin-bottom 2em
  position relative
  .facebook-message
    margin-bottom 1em

  &:after
    position absolute
    left 0
    bottom 0
    height 2em
    width 100%
    content ''
    background linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%)

.facebook-feed-wrapper
  max-height 230px
  overflow auto

.feed-message__body
  overflow hidden
  h4
    margin 0
  p
    margin 0.5em 0
  img
    float left
    max-width 4em
    max-height 3em
    margin-right 1em
    margin-top 0.75em

.feed-message__timestamp
  font-size 0.8em
  color descriptionColor
