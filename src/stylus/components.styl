.btn
  background transparent
  border 2px solid #fff
  color #fff
  font inherit
  text-transform uppercase
  padding 1em 2em
  font-size 1.1em
  cursor pointer
  &:hover
    background rgba(0, 0, 0, 0.3)

.cover
  height 500px
  background-size cover
  background-repeat no-repeat
  background-position center center
  position relative
  @media breakpoint1
    height 250px

  &:after
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    content ''
    pointer-events none
    background rgba(70, 40, 0, 0.15)
  &:first-child
    &:after
      background rgba(70, 40, 0, 0.4)

  .cover-overlay
    width 100%
    height 100%
    top 0
    left 0
    display table
    position absolute
    z-index 2

  .cover-overlay-content
    display table-cell
    vertical-align middle
    text-align center
    color #fff
    padding 1em
    h1
      font-size 7em
      titleFont()
    h2
      max-width 800px
      text-align center
      margin auto
      color #F4F5F2
      font-size 1.5em
    @media breakpoint1
      h1
        font-size 4em
      h2
        font-size 1em

.grid
  padding 0
  margin 0 auto
  margin-bottom 3em
  margin-top 2em

.grid-row
  overflow hidden

.grid-item
  float left
  display block
  width (100/3)%

  box-sizing border-box
  overflow hidden
  position relative
  cursor pointer
  color inherit

  &:first-child
    padding-left 0
  &:last-child
    padding-right 0

  .grid-item-content
    width 100%
    position relative
    background-size cover
    background-position center center
    &:before
      content ''
      display block
      padding-top 50%

  .overlay
    position absolute
    width 100%
    height 100%
    bottom 0
    left 0

    text-align center
    font-size 1.3em
    color #fff
    background rgba(70, 40, 0, 0.5)
    opacity 1
    transition opacity 0.3s

    &:hover
      opacity 0

  .overlay-content
    display table
    width 100%
    height 100%

  .overlay-text
    titleFont()
    font-weight 400
    text-transform uppercase
    vertical-align middle
    display table-cell
    font-size 1.5em

  @media breakpoint4
    width auto
    float none
    padding 0
    margin-bottom 1em


#header
  width 100%
  height 65px
  padding 0 0.5em
  position fixed
  top 0
  left 0
  line-height 65px
  z-index 3
  background #fff
  user-select none
  .logo
    width (103/2.5)px
    height (117/2.5)px
    vertical-align middle

  .nav
    -webkit-font-smoothing antialiased
    text-transform uppercase
    letter-spacing 1px
    height 100%
    display inline-block
    font-size 1em
    margin-left 0.5em
    a
      height 100%
      padding 0 1em
      display inline-block
      color textColor
      text-decoration none
    .selected
      position relative
      &:after
        width 0
        height 0
        border-left 10px solid transparent
        border-right 10px solid transparent
        border-bottom 10px solid #3D3D3D
        content ''
        position absolute
        bottom 0
        left 50%
        margin-left -5px

  .header-toggle
    padding 0 1.5em
    display none
    position relative
    z-index 2
    background #fff

  @media breakpoint3
    padding 0
    opacity 1 !important
    display block !important
    z-index 3
    .logo
      position absolute
      right 10px
      top 50%
      margin-top -23px
      z-index 3

    .header-toggle
      display block

    .nav
      background #fff
      margin 0
      display block
      height auto
      transition all 0.2s
      transform translateY(-120%)
      &.nav-visible
        transform translateY(0px)
      a
        display block
        border-bottom 1px solid #eee
        &:first-child
          border-top 1px solid #eee


#footer
  height footerHeight
  line-height footerHeight
  position relative
  margin-top -(footerHeight)
  text-align right
  font-size 0.9em
  background #E6E3DF
  color #6C6C6C
  .footer-copyright
    float left
  .footer-links
    float right

  .relative-links
    a
      margin-left 0.5em
      &:after
        content ' | '
      &:last-child
        &:after
          content ''

  .social-links
    a
      margin-left 1em
  .relative-links, .social-links
    display inline-block

    a
      color #6C6C6C
      display inline-block

  i
    font-size 1.2em
    vertical-align middle

  .tripadvisor
    width 22px
    height 13px
    display inline-block
    background-image url('data:image/png;base64,')
    background-size 100%
    vertical-align middle

.aside
  display table

  .aside-column
    width auto
    display table-cell
    vertical-align middle

  @media breakpoint1
    display block
    .aside-column
      display block
      &:not(:last-child)
        margin-bottom 2em
    img
      margin auto
      display block

.facebook-feed
  a
    color linkColor
  .facebook-message
    color linkColor
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    padding 0.5em 0

.facebook
  h2
    color textColor

.contacts
  margin 0
  padding 0
  list-style none
  display block
  li
    padding 0.5em 0
    padding-left 1.5em
    position relative
    i
      position absolute
      top 50%
      left 0
      margin-top -0.5em

.adventures
  margin-top 3em
  margin-bottom 3em

.adventure
  padding 1em 0
  display block
  display table
  margin-bottom 1em
  &:last-child
    margin-bottom 0
  .adventure-image,
  .adventure-description
    display table-cell
    vertical-align middle

  .adventure-description
    padding-left 1em
    a
      color textColorLight
    a:hover
      text-decoration underline

  a.adventure-title
    &:hover
      text-decoration none

  .adventure-title
    h4
      margin 0
      font-size 1.2em
      font-weight 400
      text-transform none
      color textColor
      text-decoration none

  .adventure-image
    img
      width 50px
      border-radius 25px
      vertical-align bottom

.rental-products
  position relative

  .product-image
    position absolute
    right 0
    bottom -20px
    width 75px
    right -10px
    border-radius 100%
    border 5px solid #fff
    transition all .2s
    &:hover, &:active
      width 100px
  .products-title
    font-weight 400
    text-transform none
    color textColorLight
    text-decoration none
    margin 1em 0
    font-size 1.5em

  .products-description
    margin-top -1em
    margin-bottom 2em

  .products-table
    width 100%
    border-collapse collapse
    color textColorLight

    strong
      font-size 1.4em
      color #8CC061
    th
      position relative
    td
      padding 0em 1em

    td:first-child
      width 30%
      text-align left
      font-weight 400
      font-size 1.1em
      color textColor

    td:last-child
      width 100px


    tr:nth-child(odd)
      background #faf7f2
      td
        background #faf7f2
        color #9a9389
      td:first-child
        color #696259

    @media breakpoint2
      display block
      tr, td, thead, tbody, th
        display block

      tbody
        tr
          overflow hidden

      td
        background transparent !important
        width auto !important
        border-bottom 0

      p
        margin 0
      td
        text-align left
        margin-right 70px

      td:last-child
        font-weight 300
        padding 1em
        float right
        margin-right 0
      td:first-child
        font-weight 400
        padding-top 1em
      .product-image
        bottom -60px
        left auto
        right -10px
      .product-description
        min-height 1em
colors = (#DDE6D5 #8DB6FD #DA6161 #F4F3F0 #F2CF5B #DDE6D5 #8DB6FD #DA6161 #F4F3F0)

.adventure-info
  padding 3em 2em
  ul
    padding-left 2em

ul
  list-style none
  padding 0
  li
    padding-left 1.5em
    margin-bottom 1em
    position relative

    &:before
      width 0.8em
      height 0.8em
      display block
      position absolute
      border-radius 1em
      top 50%
      margin-top -0.35em
      left 0
      background #DDE6D5
      content ''
  li:last-child
    margin-bottom 0
  for num in (1..7)
    li:nth-child({num}):before
      background colors[num - 1]

  h2
    font-size 1.25em
    margin-bottom 1.5em

.markdown
  ul
    margin 3em 0
    border 3px solid borderColor
    padding 1em

  h2
    margin-top 2em

  a
    color linkColor
