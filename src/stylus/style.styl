@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,700')
@import url('http://fonts.googleapis.com/css?family=Roboto+Condensed')
@import '../../vendor/font-awesome/css/font-awesome.css'

@import 'variables'
@import 'layout'
@import 'components'

// Views

#main
  .cover:first-child
    height 700px
    @media breakpoint1
      height 400px

  .view-content
    z-index 2
    position relative

  .cover:first-child
    overflow hidden
    background-image url('../images/covers/index.jpg')
    video
      position absolute
      top 0
      right 0px
      min-width 100%
      min-height 100%
      width auto
      height auto

  #map
    width 100% !important
    height 100% !important

  .intro
    margin 3em auto

  .facebook
    background #46474B
    a
      color #fff


#contacts
  padding 0
  .row
    max-width none
    width 100%
    padding 0
    border-collapse collapse
    vertical-align middle
    display table

  .column
    padding 3em 2em
    display table-cell
    overflow hidden
    float none

  @media breakpoint2
    .row
      display block
    .column
      width 100%
      display block

  h2
    margin-bottom 1em

#adventures
  .cover
    background-image url('../images/covers/adventures.jpg')

.cover-summer, #summer .cover
  background-image url('../images/covers/summer.jpg')

#winter
  .cover
    background-image url('../images/covers/winter.jpg')

#summer, #winter
  .view-content
    padding-bottom 0

#renting
  .cover
    background-image url('../images/covers/renting.jpg')

  .rental-products
    margin-top 3em
    margin-bottom 5em

  .rental-products:last-child
    margin-bottom 0

  .view-nav
    a
      margin 0.75em 1em
