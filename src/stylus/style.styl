@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,700')
@import '../../vendor/font-awesome/css/font-awesome.css'

body, html
  margin 0
  height 100%
  font-family 'Open Sans', HelveticaNeue-Light, 'Helvetica Neue Light', 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif
  font-weight 300

textColor = #46474b
textColorDark = #202123
linkColor = #33CCCC
descriptionColor = #6e7076
maxWidth = 1280px
textColorLight = #777
borderColor = #dee5f0

breakpoint1 = "all and (max-width: 550px)"
breakpoint2 = "all and (max-width: 700px)"
breakpoint3 = "all and (max-width: 800px)"
breakpoint4 = "all and (max-width: 900px)"

.section
  display none
  box-sizing border-box
  color textColor
  background #fff
  position relative

  h1 + .description
    margin-top -1.25em

  .description
    text-align center
    color descriptionColor
    font-size 1.25em

  table
    width 100%
.section-visible
  display block

.section-content
  margin 1em 0
  padding 0 2em
  padding-bottom 2em
  overflow hidden

a
  text-decoration none

h1
  font-size 3.5em
  text-align center
  @media breakpoint1
    font-size 3em
h1,h2,h3
  text-transform uppercase
  font-weight 300

hr
  border 0
  border-top 1px solid borderColor
  width 70%
  margin 3em auto

.cover
  height 500px
  background-size cover
  background-repeat no-repeat
  background-position center center
  &:first-child
    margin-top 65px

.row
  max-width 960px
  margin auto
  overflow hidden
  .column
    width (100/3)%
    float left
    box-sizing border-box

  .column1-2
    width 50%

  .column2-3
    width (100/3*2) %

  @media breakpoint2
    .column
      width auto
      max-width initial
      float none

.row-full
  width auto
  margin-left -2em
  margin-right -2em
  max-width initial

  padding 2em

// Views
body.no-video #main
  .cover
    background-image url('/images/covers/index.jpg')

#main
  .section-content
    margin-bottom 0
    z-index 2
    position relative

  .cover
    position relative
    overflow hidden
    video
      position absolute
      top 0
      right 0px
      min-width 100%
      min-height 100%
      width auto
      height auto

    &.no-video
      background-image url('/images/covers/index.jpg')

  #map
    width 100% !important
    height 100% !important

  .introduction
    ul
      margin 0
      padding-left 4em
      @media breakpoint1
        padding 0
    li
      padding-top 0.5em
      padding-bottom 0.5em

  .aside
    img
      width 15em
      border-radius 10em

  #contacts
    h2
      margin-top 2em
    .aside
      margin-top 2em
      margin-bottom 2em


#adventures
  .cover
    background-image url('/images/covers/adventures.jpg')

.cover-summer, #summer .cover
  background-image url('/images/covers/summer.jpg')

#winter
  .cover
    background-image url('/images/covers/winter.jpg')

#adventures_paddling-yllas
  .cover
    background-image url('/images/covers/adventures/paddling-yllas.jpg')

#adventures_gold-miners-route
  .cover
    background-image url('/images/covers/adventures/gold-miners-route.jpg')

#renting
  .cover
    background-image url('http://lorempizza.com/380/240')
  .feature
    margin-bottom 0
  table
    margin-bottom 3em
    border-collapse collapse
    td
      width 40%
      text-align center
      padding 0.5em 0.4em
      border-bottom 1px solid #ddd

    td:first-child
      text-align left
      width 30%

    td:last-child
      width 30%
      font-weight 400

    tr:nth-child(odd)
      td
        background #fcfcfc

    @media breakpoint2
      display block
      tr, td, tbody
        display block
      td
        width auto !important
        border-bottom 0
      td:first-child
        border-bottom 1px solid #ddd
      td:empty
        padding 0
      td
        background transparent !important
        text-align left
      td:last-child
        margin-bottom 2em
        font-weight 300
      td:first-child
        font-weight 400

// Components
.grid
  padding 0 1em
  margin 1em auto
  max-width maxWidth

.grid-row
  overflow hidden

.grid-item
  float left
  display block
  width (100/3)%
  height 200px
  padding 1em
  box-sizing border-box
  overflow hidden
  position relative
  cursor pointer
  color inherit
  .grid-item-content
    width 100%
    height 100%
    position relative
    background-size cover
    background-position center center

  .overlay
    position absolute
    width 100%
    height 100%
    top 0
    left 0

    text-align center
    font-size 1.5em
    color textColorDark
    background rgba(255,255,255, 0.5)
    opacity 1
    transition opacity 0.3s
    display table
    &:hover
      opacity 0

  .overlay-text
    vertical-align middle
    display table-cell
  @media breakpoint4
    width auto
    float none
    padding 0
    margin-bottom 1em

#header
  width 100%
  height 65px
  padding 0 0.5em
  position fixed
  top 0
  left 0
  line-height 65px
  z-index 2
  background #fff
  user-select none
  .logo
    width (103/2.5)px
    height (117/2.5)px
    vertical-align middle

  nav
    -webkit-font-smoothing antialiased
    text-transform uppercase
    letter-spacing 1px
    height 100%
    display inline-block
    font-size 1em
    a
      height 100%
      padding 0 1em
      display inline-block
      color textColor
      text-decoration none

  .header-toggle
    padding 0 1.5em
    display none
    position relative
    z-index 2
    background #fff

  @media breakpoint3
    padding 0
    opacity 1 !important
    display block !important
    z-index 3
    .logo
      position absolute
      right 10px
      top 50%
      margin-top -23px
      z-index 3

    .header-toggle
      display block

    nav
      background #fff
      display block
      height auto
      transition all 0.2s
      transform translateY(-120%)
      &.nav-visible
        transform translateY(0px)
      a
        display block
        border-bottom 1px solid #eee
        &:first-child
          border-top 1px solid #eee


#footer
  font-size 0.8em
  padding 2em 0
  text-align center
  a
    color linkColor
    display inline-block
    margin 0 0.5em
    &:not(:last-child):after
      color textColor
      content ' - '
      margin-left 1em

.aside
  display table

  .aside-column
    width auto
    display table-cell
    vertical-align middle

  @media breakpoint1
    display block
    .aside-column
      display block
      &:not(:last-child)
        margin-bottom 2em
    img
      margin auto
      display block

.facebook-feed
  max-width 900px
  .facebook-icon
    width 48px
    height 48px
    background url('/images/facebook-icon.png')
    background-size 100%
    margin-bottom 1em
  .timestamp
    font-size 0.75em
    color #888
    margin-bottom 5px
  .item
    margin-left 1em
    margin-bottom 0.5em
    background #f4f6f8
    padding 0.5em
  .item:nth-child(odd)
    background transparent
  .fb-like
    margin 0 auto
    width 450px
    display block
    margin-top 2.5em

.contacts
  padding 0
  list-style none
  li
    padding 0.6em 0
    padding-left 1.5em
    position relative
    i
      position absolute
      top 50%
      left 0
      margin-top -0.5em

.feature
  position relative
  padding 1em 0
  margin 1em 0
  display block
  color textColor
  overflow hidden
  display table

  .feature-image,
  .feature-description
    display table-cell
    vertical-align middle

  .feature-description
    padding-left 1em
    a
      color textColorLight
    a:hover
      text-decoration underline

  a.feature-title
    &:hover
      text-decoration none
  .feature-title

    h3
      margin 0
      font-weight 400
      text-transform none
      color textColor
      text-decoration none

  .feature-image
    img
      width 50px
      border-radius 25px
      vertical-align bottom


colors = (#DDE6D5 #8DB6FD #DA6161 #F4F3F0 #F2CF5B #DDE6D5 #8DB6FD #DA6161 #F4F3F0)

.adventure-info
  padding 3em 2em
  ul
    padding-left 2em

ul
  list-style none
  padding 0
  li
    padding-left 1.5em
    margin-bottom 1em
    position relative

    &:before
      width 0.8em
      height 0.8em
      display block
      position absolute
      border-radius 1em
      top 50%
      margin-top -0.35em
      left 0
      background blue
      content ''
  li:last-child
    margin-bottom 0
  for num in (1..7)
    li:nth-child({num}):before
      background colors[num - 1]

  h2
    font-size 1.25em
    margin-bottom 1.5em

.dynamic-content
  ul
    margin 3em 0
    border 3px solid borderColor
    padding 1em
