@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Roboto+Condensed')

@import 'variables'
@import 'layout'
@import 'components'

// Views

#home
  .cover:first-child
    height 700px
    h1
      font-size 4em
      font-weight 700
    @media breakpoint1
      height 400px

  .view-content
    z-index 2
    position relative
    box-shadow 0px 0px 1px 1px rgba(0, 0, 0, 0.2)
  .view-content:last-child
    box-shadow 0px -1px 1px rgba(0, 0, 0, 0.2)

  .cover:first-child
    overflow hidden
    background-image url('../images/covers/index.jpg')
    video
      position absolute
      top 0
      right 0px
      min-width 100%
      min-height 100%
      width auto
      height auto

#contacts
  .column
    padding 1em 2em
    background #fff
    box-shadow 1px 1px 1px rgba(0, 0, 0, 0.05)
    z-index 2
    margin-bottom 1em
    h3
      margin-top 0.5em
      padding-bottom 0.5em
      border-bottom 1px solid borderColor
#adventures
  .cover
    background-image url('../images/covers/adventures.jpg')

.cover-instagram
  overflow hidden
  height auto
  min-height 300px
  @media breakpoint4
    min-height auto

.cover-winter
  background-image url('../images/covers/index.jpg')

.cover-summer, #summer .cover
  background-image url('../images/covers/summer.jpg')

#winter
  .cover
    background-image url('../images/covers/winter.jpg')

#summer
  .grid-row:first-child
    .grid-item
      width 50%
      @media breakpoint4
        width auto

#summer, #winter
  .view-content
    padding-bottom 0

#renting
  .cover
    background-image url('../images/covers/renting.jpg')

  .rental-products
    margin-top 3em
    margin-bottom 5em

  .rental-products:last-child
    margin-bottom 0

  .view-nav
    a
      margin 0.75em 1em
