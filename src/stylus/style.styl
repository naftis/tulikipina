@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,700')
@import '../../vendor/font-awesome/css/font-awesome.css'

@import 'variables'
@import 'layout'
@import 'components'

// Views

#main
  .view-content
    z-index 2
    position relative

  .cover:first-child
    position relative
    overflow hidden
    background-image url('../images/covers/index.jpg')
    video
      position absolute
      top 0
      right 0px
      min-width 100%
      min-height 100%
      width auto
      height auto

  #map
    width 100% !important
    height 100% !important

  .introduction
    ul
      margin 0
      padding-left 4em
      @media breakpoint1
        padding 0
    li
      padding-top 0.5em
      padding-bottom 0.5em

  .aside
    img
      width 15em
      border-radius 10em

#contacts
  h2
    margin-bottom 1em

  .contacts:last-child
    margin-top 1em

  .fb-like
    margin-top 1em

#adventures
  .cover
    background-image url('../images/covers/adventures.jpg')

.cover-summer, #summer .cover
  background-image url('../images/covers/summer.jpg')

#winter
  .cover
    background-image url('../images/covers/winter.jpg')


#renting
  .cover
    background-image url('../images/covers/renting.jpg')

  .rental-products
    margin-bottom 5em
  .rental-products:last-child
    margin-bottom 0

