@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,700')
@import '../../vendor/font-awesome/css/font-awesome.css'

body, html
  margin 0
  height 100%
  font-family 'Open Sans', HelveticaNeue-Light, 'Helvetica Neue Light', 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif
  font-weight 300

textColor = #46474b
linkColor = #00AED9
descriptionColor = #6e7076
maxWidth = 1280px

breakpoint1 = "all and (max-width: 550px)"
breakpoint2 = "all and (max-width: 700px)"
breakpoint3 = "all and (max-width: 800px)"
breakpoint4 = "all and (max-width: 900px)"

.section
  box-sizing border-box
  color textColor
  background #fff
  position relative

  h1 + .description
    margin-top -1.25em

  .description
    width 80%
    max-width 700px
    margin auto
    text-align center
    color descriptionColor
    font-size 1.25em
    @media breakpoint1
      width auto
  &.hidden
    display none

.section-content
  margin 1em 0
  padding 0 2em
  padding-bottom 4em
  overflow hidden

a
  text-decoration none

h1
  font-size 3.5em
  text-align center
  @media breakpoint1
    font-size 3em
h1,h2,h3
  text-transform uppercase
  font-weight 300

hr
  border 0
  border-top 1px solid #dee5f0
  width 70%
  margin 3em auto

.cover
  margin-top 65px
  height 500px
  background-size cover
  background-repeat no-repeat
  background-position center center

.row
  max-width 960px
  margin auto
  overflow hidden
  .column
    width (100/3)%
    float left
    box-sizing border-box

  .column1-2
    width 50%

  .column2-3
    width (100/3*2) %

  @media breakpoint2
    .column
      width auto
      max-width initial
      float none

.row-full
  width auto
  max-width initial


// Views
body.no-video #main
  .cover
    background-image url('/images/covers/index.jpg')

#main
  .list-feature
    margin 3em auto 2em auto

  .cover
    position relative
    overflow hidden
    video
      position absolute
      top 0
      right 0px
      min-width 100%
      min-height 100%
      width auto
      height auto

    &.no-video
      background-image url('/images/covers/index.jpg')

  .map-container
    padding-left 3em
    @media breakpoint2
      padding-left 0

  .map
    width 600px
    height 300px
    @media breakpoint4
      width 400px
    @media breakpoint2
      width 100%

  .introduction
    ul
      margin 0
      padding-left 4em
      @media breakpoint1
        padding 0
    li
      padding 1em 0

    img
      width 15em
      border-radius 10em

#adventures
  .cover
    background-image url('/images/covers/adventures.jpg')

#summer
  .cover
    background-image url('/images/covers/summer.jpg')

#winter
  .cover
    background-image url('/images/covers/winter.jpg')

#adventures_paddling-yllas
  .cover
    background-image url('/images/covers/adventures/paddling-yllas.jpg')

#adventures_gold-miners-route
  .cover
    background-image url('/images/covers/adventures/gold-miners-route.jpg')

#renting
  .cover
    background-image url('http://lorempizza.com/380/240')

// Components
.grid
  padding 0 1em
  margin 1em auto
  max-width maxWidth

.grid-row
  overflow hidden

.grid-item
  float left
  display block
  width (100/3)%
  height 200px
  padding 1em
  box-sizing border-box
  overflow hidden
  position relative
  cursor pointer
  color inherit
  .grid-item-content
    width 100%
    height 100%
    position relative
    background-size cover
    background-position center center

  .overlay
    position absolute
    width 100%
    height 100%
    top 0
    left 0

    text-align center
    font-size 1.5em
    background rgba(255,255,255, 0.4)
    opacity 1
    transition opacity 0.3s
    display table
    &:hover
      opacity 0

  .overlay-text
    vertical-align middle
    display table-cell
  @media breakpoint2
    width auto
    float none
    padding 0
    margin-bottom 1em

#header
  width 100%
  height 65px
  padding 0 0.5em
  position fixed
  top 0
  left 0
  line-height 65px
  z-index 2
  background #fff
  transition opacity 0.4s
  user-select none
  .logo
    width (103/2.5)px
    height (117/2.5)px
    vertical-align middle

  nav
    -webkit-font-smoothing antialiased
    text-transform uppercase
    letter-spacing 1px
    height 100%
    display inline-block
    font-size 1em
    a
      height 100%
      padding 0 1em
      display inline-block
      color textColor
      text-decoration none

  .header-toggle
    padding 0 1.5em
    display none
    position relative
    z-index 2
    background #fff

  @media breakpoint3
    padding 0

    .logo
      position absolute
      right 10px
      top 50%
      margin-top -23px
      z-index 3

    .header-toggle
      display block

    nav
      background #fff
      display block
      height auto
      transition all 0.2s
      transform translateY(-120%)
      &.nav-visible
        transform translateY(0px)
      a
        display block
        border-bottom 1px solid #eee
        &:first-child
          border-top 1px solid #eee
        &:last-child
          border 0

#footer
  font-size 0.8em
  padding 1em 0
  text-align center
  a
    color linkColor
    display inline-block
    margin 0 0.5em
    &:not(:last-child):after
      color textColor
      content ' - '
      margin-left 1em

.aside
  display table

  .aside-column
    width auto
    display table-cell
    vertical-align middle

  @media breakpoint1
    display block
    .aside-column
      display block
      &:not(:last-child)
        margin-bottom 2em
    img
      margin auto
      display block

  &.aside-resp
    @media breakpoint2
      display block
      .aside-column
        display block
        &:not(:last-child)
          margin-bottom 2em
      img
        margin auto
        display block

.facebook-feed
  max-width 900px
  .facebook-icon
    width 48px
    height 48px
    background url('/images/facebook-icon.png')
    background-size 100%
    margin-bottom 1em
  .timestamp
    font-size 0.75em
    color #888
    margin-bottom 5px
  .item
    margin-left 1em
    margin-bottom 0.5em
    background #f4f6f8
    padding 0.5em
  .item:nth-child(odd)
    background transparent
  .fb-like
    margin 0 auto
    width 450px
    display block
    margin-top 2.5em

.contacts
  padding 0
  list-style none
  li
    padding 3px
    padding-left 2em
    position relative
    i
      position absolute
      top 50%
      left 0
      margin-top -0.5em

.feature
  position relative
  padding 1em
  margin 1em 0
  display block
  color textColor
  overflow hidden

  h3
    margin 0
    font-weight 400
    text-transform none
  p
    margin 0.5em 0
  img
    width 100px
    float left
    margin-right 1em


